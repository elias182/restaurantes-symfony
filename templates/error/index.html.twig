{# templates/layout/header.html.twig #}

{% block stylesheets %}
    <style>
        .error-container {
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .error-title {
            font-size: 2rem;
            margin-bottom: 20px;
            color: #333;
        }

        .error-message {
            font-size: 1.2rem;
            margin-bottom: 20px;
            color: #666;
        }

        .btn-back-home {
            padding: 10px 20px;
            font-size: 1.2rem;
            background-color: #28a745;
            color: #fff;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .btn-back-home:hover {
            background-color: #218838;
        }
    </style>
{% endblock %}

{% block body %}
<div class="error-container">
    <h2 class="error-title">Ups, ha ocurrido algo inesperado</h2>
    <p class="error-message">Haz click en el bot√≥n para volver al inicio.</p>
    <a href="/" class="btn btn-back-home">Volver a inicio</a>
</div>
{% endblock %}
