{% extends 'base.html.twig' %}

{% block title %}Categorias{% endblock %}

{% block body %}
{% include 'layout/header.html.twig' %}
    <h1>Categorias</h1>

    {% if is_granted('ROLE_ADMIN') %}
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for categoria in categorias %}
                    <tr>
                        <td>{{ categoria.id }}</td>
                        <td>{{ categoria.nombre }}</td>
                        <td>{{ categoria.descripcion }}</td>
                        <td>
                            <a href="{{ path('app_categorias_show', {'id': categoria.id}) }}">Mostrar</a>
                            <a href="{{ path('app_categorias_edit', {'id': categoria.id}) }}">Editar</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">No se encontraron registros.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('app_categorias_new') }}">Crear nueva categoría</a>
    {% else %}
        <ul>
            {% for categoria in categorias %}
                <li>
                    <a href="{{ path('productos_por_categoria', {'id': categoria.id}) }}">{{ categoria.nombre }}</a>
                </li>
            {% else %}
                <li>No se encontraron categorías.</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
