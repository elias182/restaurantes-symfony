{% extends 'base.html.twig' %}

{% block title %}Detalles del Pedido{% endblock %}

{% block body %}
    {% include 'layout/header.html.twig' %}
    <div class="container mt-5">
        <h1>Detalles del Pedido</h1>

        <div class="row">
            <div class="col-md-6">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row">ID</th>
                            <td>{{ pedido.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Fecha</th>
                            <td>{{ pedido.fecha ? pedido.fecha|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Comprador</th>
                            <td>{{ restaurante.email }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Enviado</th>
                            <td>
                                {% if pedido.enviado == 1 %}
                                    Enviado
                                {% elseif pedido.enviado == 2 %}
                                    Cancelado
                                {% else %}
                                    No enviado
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <a href="{{ path('app_pedidos_index') }}" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </div>
    </div>
{% endblock %}
