{% extends 'base.html.twig' %}

{% block title %}Pedidos index{% endblock %}

{% block body %}
{% include 'layout/header.html.twig' %}
    <h1>Pedidos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Enviado</th>
                {% if is_granted('ROLE_ADMIN')%}
                <th>actions</th>
                {% endif%}
            </tr>
        </thead>
        <tbody>
        {% for pedido in pedidos %}
            <tr>
                <td>{{ pedido.id }}</td>
                <td>{{ pedido.fecha ? pedido.fecha|date('Y-m-d') : '' }}</td>
                <td>{{ pedido.enviado }}</td>
                {% if is_granted('ROLE_ADMIN')%}
                <td>
                    <a href="{{ path('app_pedidos_show', {'id': pedido.id}) }}">show</a>
                    <a href="{{ path('app_pedidos_edit', {'id': pedido.id}) }}">edit</a>
                </td>
                {% endif%}
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
