{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión{% endblock %}

{% block body %}
    {% include 'layout/header.html.twig' %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post" class="form-signin">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="alert alert-info mb-3">
                            Ya has iniciado sesión como {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Cerrar Sesión</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">Por favor, inicia sesión</h1>
                    <label for="username" class="sr-only">Correo Electrónico</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control mb-2" placeholder="Correo Electrónico" autocomplete="email" required autofocus>
                    <label for="password" class="sr-only">Contraseña</label>
                    <input type="password" name="_password" id="password" class="form-control mb-3" placeholder="Contraseña" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Iniciar Sesión
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
