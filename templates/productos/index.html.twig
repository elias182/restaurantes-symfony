{% block body %}
{% include 'layout/header.html.twig' %}
    <div class="container mt-5">
        <h1>Productos</h1>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>{% if is_granted('ROLE_ADMIN') %}ID{% else %}Imagen{% endif %}</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Peso</th>
                        <th>Stock</th>
                        <th>Precio</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for producto in productos %}
                    {% if producto.stock > 0 %}
                        <tr>
                            <td>
                                {% if is_granted('ROLE_ADMIN') %}
                                    {{ producto.id }}
                                {% else %}
                                    <img src="{{ asset('uploads/images/productos/' ~ producto.imagen) }}" alt="Imagen del producto" width="100">
                                {% endif %}
                            </td>
                            <td>{{ producto.nombre }}</td>
                            <td>{{ producto.descripcion }}</td>
                            <td>{{ producto.peso }} Kg.</td>
                            <td>{{ producto.stock }} uds.</td>
                            <td>{{ producto.precio }} €.</td>
                            <td>
                                {% if is_granted('ROLE_ADMIN') and is_granted('ROLE_USER') %}

                                    <a href="{{ path('app_productos_show', {'id': producto.id}) }}" class="btn btn-primary">Show</a>
                                    <a href="{{ path('app_productos_edit', {'id': producto.id}) }}" class="btn btn-secondary">Edit</a>
                                    <form action="{{ path('app_productos_delete', {'id': producto.id}) }}" method="POST" style="display: inline;">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ producto.id) }}">
                                        <button type="submit" class="btn btn-danger">delete</button>
                                    </form>

                                {% else %}
                                <form action="{{ path('agregar_al_carrito') }}" method="post">
                                    <input type="hidden" name="producto_id" value="{{ producto.id }}">
                                    <button type="submit" class="btn btn-success">Agregar al carrito</button>
                                </form>
                                {% endif %}
                            </td>
                        </tr>
                    {% endif %}
                {% else %}
                    <tr>
                        <td colspan="7">No se encontraron registros</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_productos_new') }}" class="btn btn-primary">Crear nueva</a>
        {% endif %}
    </div>
{% endblock %}